<h1>Register</h1>

<form class="signup-form">
  <div class="form-group">
    <label for="user-name">Full Name</label>
    <input
      id="user-name"
      name="user-name"
      placeholder="Enter Name"
      type="text"
      required="required"
      class="form-control"
    />
  </div>
  <div class="form-group">
    <label for="user-user-name">User Name</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <i class="fa fa-address-book-o"></i>
        </div>
      </div>
      <input
        id="user-user-name"
        name="user-user-name"
        placeholder="Enter User Name"
        type="text"
        class="form-control"
        required="required"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="user-email">Email Address</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <i class="fa fa-at"></i>
        </div>
      </div>
      <input
        id="user-email"
        name="user-email"
        placeholder="Enter Email Address"
        type="text"
        class="form-control"
        required="required"
        aria-describedby="user-emailHelpBlock"
      />
    </div>
    <span id="user-emailHelpBlock" class="form-text text-muted">We won't share
      your email with anyone.</span>
  </div>
  <div class="form-group">
    <label for="user-password">Password</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <i class="fa fa-lock"></i>
        </div>
      </div>
      <input
        id="user-password"
        name="user-password"
        placeholder="Enter Password"
        type="text"
        class="form-control"
        required="required"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="user-password-confirm">Password Confirmation</label>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text">
          <i class="fa fa-lock"></i>
        </div>
      </div>
      <input
        id="user-password-confirm"
        name="user-password-confirm"
        placeholder="Confirm Password"
        type="text"
        class="form-control"
        required="required"
      />
    </div>
  </div>
  <div class="form-group">
    <button name="submit" type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>